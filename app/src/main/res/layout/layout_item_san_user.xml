<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp"
    android:id="@+id/cardView_layout_san_user"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtTenSan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Sân 1"
            android:textColor="@color/black"
            android:textSize="25sp"></TextView>

        <ImageView
            android:id="@+id/imgSan"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@id/txtTenSan"
            android:scaleType="fitXY"
            android:src="@drawable/imgsancaulonguser"></ImageView>
        <TextView
            android:layout_below="@id/imgSan"
            android:text="Giá : 190.000 VNĐ - 200.000VNĐ"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
    </RelativeLayout>
</androidx.cardview.widget.CardView>